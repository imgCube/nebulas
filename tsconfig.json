{
  "exclude": [
    "node_modules",
    "tests"
  ],
  "include": [
    "lib/src/*.ts",
    "lib/*.ts",
    "global.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "checkJs": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "allowSyntheticDefaultImports": true
  }
}